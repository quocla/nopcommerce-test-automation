{
  "name": "nopcommerce-test-automation",
  "version": "1.0.0",
  "description": "Comprehensive test automation framework for nopCommerce using Playwright and TypeScript",
  "main": "index.js",
  "scripts": {
    "pretest": "npm run type-check",
    "test": "cross-env test_env=dev npx playwright test",
    "test:headed": "npm test -- --headed",
    "test:debug": "npx playwright test --debug",
    "test:ui": "npx playwright test --ui",
    "test:smoke": "cross-env test_env=dev npx playwright test --grep @smoke",
    "test:regression": "cross-env test_env=dev npx playwright test --grep @regression",
    "test:parallel": "cross-env test_env=dev npx playwright test --workers=4",
    "test:chrome": "npm test -- --project=chromium",
    "test:firefox": "npm test -- --project=firefox",
    "test:webkit": "npm test -- --project=webkit",
    "test:mobile": "npm test -- --project=mobile-chrome",
    "staging": "cross-env test_env=staging npx playwright test",
    "staging:smoke": "cross-env test_env=staging npx playwright test --grep @smoke",
    "report": "npx playwright show-report",
    "report:open": "npx playwright show-report",
    "install:browsers": "npx playwright install --with-deps",
    "install:deps": "npm install",
    "type-check": "tsc --noEmit",
    "lint": "eslint src tests --ext .ts",
    "format": "prettier --write src tests",
    "format:check": "prettier --check src tests",
    "clean": "rm -rf test-results playwright-report blob-report ctrf && mkdir -p ctrf src/setup",
    "demo": "./scripts/create-demo-video.sh"
  },
  "keywords": [
    "playwright",
    "typescript",
    "test-automation",
    "nopcommerce",
    "e2e-testing",
    "page-object-model",
    "ci-cd"
  ],
  "author": "Test Automation Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "eslint": "^8.54.0",
    "playwright-ctrf-json-reporter": "^0.0.4",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "@faker-js/faker": "^8.3.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/quocla/nopcommerce-test-automation.git"
  },
  "bugs": {
    "url": "https://github.com/quocla/nopcommerce-test-automation/issues"
  },
  "homepage": "https://github.com/quocla/nopcommerce-test-automation#readme"
}
